#!/bin/bash

echo "Current directory: $(pwd)"
echo '========== ENV =========='

env | sed -r 's|([^=]+)=(.+)|\1="\2"|' |\
  su www-data tee .env

if [ -z "$APP_KEY" ]; then
  php -r "echo 'APP_KEY=\"base64:'.base64_encode(random_bytes(32)).'\"';" |\
    su www-data tee -a .env
fi

echo
echo '========== ENV =========='
echo

exec apache2-foreground
